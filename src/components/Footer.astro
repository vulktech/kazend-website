---
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-stone/20 mt-auto">
  <div class="px-4 md:px-6 lg:px-8 py-8">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <!-- Built by -->
        <div class="flex items-center gap-2 text-muted/60 text-sm">
          <span>Built by</span>
          <a
            href="https://vulktech.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-cream/80 hover:text-gold transition-colors duration-300 font-medium"
          >
            Vulktech
          </a>
        </div>

        <!-- Contact -->
        <a
          href="mailto:hello@kazend.com"
          class="text-muted/60 hover:text-gold text-sm transition-colors duration-300"
        >
          hello@kazend.com
        </a>

        <!-- Copyright -->
        <p class="text-muted/40 text-sm">
          &copy; {currentYear} Kazend
        </p>
      </div>
    </div>
  </div>
</footer>
