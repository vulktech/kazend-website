---
interface Props {
  number: string;
  title: string;
  description: string;
  offset?: string;
  delay?: string;
}

const {
  number,
  title,
  description,
  offset = "",
  delay = "delay-400"
} = Astro.props;
---

<div class:list={["feature-card bg-warm-black border border-stone/50 p-4 md:p-5 animate-fade-up glow-border", offset, delay]}>
  <div class="flex items-start gap-5">
    <span class="feature-number text-4xl font-display font-bold text-stone transition-colors duration-300">{number}</span>
    <div class="pt-1">
      <h3 class="font-display font-semibold text-lg text-cream mb-2">{title}</h3>
      <p class="text-muted font-light leading-relaxed">{description}</p>
    </div>
  </div>
</div>
