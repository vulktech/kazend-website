---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import EmailSignup from '../components/EmailSignup.astro';
---

<Layout
  title="Kazend - Know What Your Buyers Actually Want"
  description="Stop guessing what your buyers want. Kazend lets your clients browse, favorite, and search—while you see their intent in real-time and close faster."
>
  <Header launchDate="Coming Soon" />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="px-6 py-12 md:py-20 lg:py-24">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Left: Text Content -->
          <div class="max-w-xl">
            <div class="h-px w-16 bg-gold mb-8 animate-line-grow"></div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-cream leading-[1.1] tracking-tight animate-fade-up delay-100">
              Close deals faster by knowing what your buyers
              <span class="text-gradient-gold"> actually want</span>
            </h1>

            <p class="text-lg md:text-xl text-muted font-light leading-relaxed mt-6 animate-fade-up delay-200">
              Your buyers browse and favorite homes. You recommend properties they'll love.
              Both sides visible in real-time. No more guessing.
            </p>

            <div class="mt-10 animate-fade-up delay-300">
              <EmailSignup />
            </div>

            <!-- Trust indicators -->
            <div class="mt-10 flex items-center gap-6 animate-fade-up delay-400">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-muted text-sm">Utah MLS</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-muted text-sm">Built for agents</span>
              </div>
            </div>
          </div>

          <!-- Right: Visual Mockup -->
          <div class="relative animate-fade-up delay-300">
            <!-- Decorative frame -->
            <div class="absolute -inset-4 border border-stone/20 corner-accent hidden lg:block"></div>

            <!-- Mockup Window -->
            <div class="mockup-window rounded-xl overflow-hidden relative">
              <!-- Window Header -->
              <div class="flex items-center gap-2 px-4 py-3 border-b border-stone/30">
                <div class="mockup-dot bg-red-500/60"></div>
                <div class="mockup-dot bg-yellow-500/60"></div>
                <div class="mockup-dot bg-green-500/60"></div>
                <span class="ml-4 text-muted text-xs">Buyer Portal</span>
              </div>

              <!-- Content -->
              <div class="p-6">
                <!-- Buyer Activity Header -->
                <div class="flex items-center justify-between mb-6">
                  <div>
                    <p class="text-cream/60 text-xs uppercase tracking-wider">Active Buyer</p>
                    <p class="text-cream font-display font-semibold">Sarah & Mike</p>
                  </div>
                  <div class="flex items-center gap-2 px-3 py-1.5 bg-gold/10 border border-gold/30 rounded-full">
                    <span class="w-2 h-2 bg-gold rounded-full intent-indicator"></span>
                    <span class="text-gold text-xs font-medium">Browsing now</span>
                  </div>
                </div>

                <!-- Property Cards Grid -->
                <div class="grid grid-cols-2 gap-3">
                  <!-- Favorited Property -->
                  <div class="mockup-listing favorited rounded-lg p-3 relative">
                    <div class="absolute top-2 right-2">
                      <svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="h-16 bg-stone/40 rounded mb-2"></div>
                    <p class="text-cream text-xs font-medium">$485,000</p>
                    <p class="text-muted text-xs">4 bed • South Jordan</p>
                  </div>

                  <!-- Favorited Property -->
                  <div class="mockup-listing favorited rounded-lg p-3 relative">
                    <div class="absolute top-2 right-2">
                      <svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="h-16 bg-stone/40 rounded mb-2"></div>
                    <p class="text-cream text-xs font-medium">$520,000</p>
                    <p class="text-muted text-xs">3 bed • Draper</p>
                  </div>

                  <!-- Regular Property -->
                  <div class="mockup-listing rounded-lg p-3">
                    <div class="h-16 bg-stone/40 rounded mb-2"></div>
                    <p class="text-cream text-xs font-medium">$450,000</p>
                    <p class="text-muted text-xs">3 bed • Sandy</p>
                  </div>

                  <!-- Regular Property -->
                  <div class="mockup-listing rounded-lg p-3">
                    <div class="h-16 bg-stone/40 rounded mb-2"></div>
                    <p class="text-cream text-xs font-medium">$510,000</p>
                    <p class="text-muted text-xs">4 bed • Riverton</p>
                  </div>
                </div>

                <!-- Intent Summary -->
                <div class="mt-4 p-3 bg-gold/5 border border-gold/20 rounded-lg">
                  <p class="text-gold text-xs font-medium mb-1">Buyer Intent Summary</p>
                  <p class="text-cream/70 text-xs">Searching: 4 bed, $450-550k, South Valley</p>
                </div>
              </div>
            </div>

            <!-- Floating notification -->
            <div class="absolute -bottom-4 -right-4 bg-warm-black border border-gold/30 rounded-lg px-4 py-3 shadow-2xl floating-badge hidden lg:block">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-gold/10 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                  </svg>
                </div>
                <div>
                  <p class="text-cream text-xs font-medium">New favorite!</p>
                  <p class="text-muted text-xs">Sarah saved a listing</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem/Solution Section -->
    <section class="px-6 py-16 md:py-24">
      <div class="max-w-7xl mx-auto">
        <div class="section-divider mb-16"></div>

        <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
          <!-- Problem -->
          <div class="problem-card rounded-2xl p-8 md:p-10 animate-fade-up">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-full bg-red-500/10 border border-red-500/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-red-400/80 text-sm font-medium uppercase tracking-wider">The Problem</span>
            </div>

            <h2 class="text-2xl md:text-3xl font-display font-bold text-cream mb-4">
              Your brokerage gave you a CRM.
              <span class="text-muted"> It's gathering dust.</span>
            </h2>

            <p class="text-muted leading-relaxed">
              Complex dashboards. Endless spreadsheets. Cold email campaigns you'll never run.
              Meanwhile, your buyers never tell you what they really want until it's too late.
            </p>
          </div>

          <!-- Solution -->
          <div class="solution-card rounded-2xl p-8 md:p-10 animate-fade-up delay-200">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-full bg-gold/10 border border-gold/30 flex items-center justify-center">
                <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-gold text-sm font-medium uppercase tracking-wider">The Solution</span>
            </div>

            <h2 class="text-2xl md:text-3xl font-display font-bold text-cream mb-4">
              Let your buyers
              <span class="text-gradient-gold"> show you</span> what they want.
            </h2>

            <p class="text-muted leading-relaxed">
              Kazend flips the model. Your clients browse, favorite, and search.
              You see their intent in real-time and act on it. Collaboration, not tracking.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="px-6 py-16 md:py-24 bg-warm-black/50">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <div class="h-px w-16 bg-gold mx-auto mb-6 animate-line-grow"></div>
          <h2 class="text-3xl md:text-4xl font-display font-bold text-cream animate-fade-up">
            How It Works
          </h2>
          <p class="text-muted mt-4 max-w-2xl mx-auto animate-fade-up delay-100">
            Three simple steps to transform how you work with buyers
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
          <!-- Step 1 -->
          <div class="text-center animate-fade-up delay-200">
            <div class="step-connector inline-block">
              <div class="step-number">01</div>
            </div>
            <div class="icon-container w-16 h-16 rounded-2xl mx-auto mb-6 flex items-center justify-center">
              <svg class="w-7 h-7 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-semibold text-cream mb-3">Invite Your Client</h3>
            <p class="text-muted text-sm leading-relaxed">
              Send a simple invite link. Your buyer creates an account in seconds.
            </p>
          </div>

          <!-- Step 2 -->
          <div class="text-center animate-fade-up delay-300">
            <div class="step-connector inline-block">
              <div class="step-number">02</div>
            </div>
            <div class="icon-container w-16 h-16 rounded-2xl mx-auto mb-6 flex items-center justify-center">
              <svg class="w-7 h-7 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-semibold text-cream mb-3">Browse & Recommend</h3>
            <p class="text-muted text-sm leading-relaxed">
              Buyers explore and save favorites. You recommend properties they'll love. A two-way street.
            </p>
          </div>

          <!-- Step 3 -->
          <div class="text-center animate-fade-up delay-400">
            <div class="step-number">03</div>
            <div class="icon-container w-16 h-16 rounded-2xl mx-auto mb-6 flex items-center justify-center">
              <svg class="w-7 h-7 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-semibold text-cream mb-3">You See Their Intent</h3>
            <p class="text-muted text-sm leading-relaxed">
              See exactly what they want. Schedule tours. Close deals faster.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="px-6 py-16 md:py-24">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-display font-bold text-cream animate-fade-up">
            Built for
            <span class="text-gradient-gold">real work</span>
          </h2>
          <p class="text-muted mt-4 max-w-2xl mx-auto animate-fade-up delay-100">
            Everything you need. Nothing you don't.
          </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- Feature 1 -->
          <div class="feature-card bg-warm-black border border-stone/50 rounded-xl p-6 animate-fade-up delay-200 glow-border">
            <div class="icon-container w-12 h-12 rounded-xl mb-4 flex items-center justify-center">
              <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="font-display font-semibold text-cream mb-2">Client Portal</h3>
            <p class="text-muted text-sm leading-relaxed">Branded portal for each of your buyers to browse and save.</p>
          </div>

          <!-- Feature 2 -->
          <div class="feature-card bg-warm-black border border-stone/50 rounded-xl p-6 animate-fade-up delay-300 glow-border">
            <div class="icon-container w-12 h-12 rounded-xl mb-4 flex items-center justify-center">
              <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <h3 class="font-display font-semibold text-cream mb-2">MLS Integration</h3>
            <p class="text-muted text-sm leading-relaxed">Full Utah MLS listings available to your logged-in clients.</p>
          </div>

          <!-- Feature 3 -->
          <div class="feature-card bg-warm-black border border-stone/50 rounded-xl p-6 animate-fade-up delay-400 glow-border">
            <div class="icon-container w-12 h-12 rounded-xl mb-4 flex items-center justify-center">
              <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-display font-semibold text-cream mb-2">Tour Scheduling</h3>
            <p class="text-muted text-sm leading-relaxed">Plan optimized house tours with automatic scheduling and routing.</p>
          </div>

          <!-- Feature 4 -->
          <div class="feature-card bg-warm-black border border-stone/50 rounded-xl p-6 animate-fade-up delay-500 glow-border">
            <div class="icon-container w-12 h-12 rounded-xl mb-4 flex items-center justify-center">
              <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="font-display font-semibold text-cream mb-2">Simple by Design</h3>
            <p class="text-muted text-sm leading-relaxed">No cold campaigns. No complex pipelines. Just you and your buyers.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Early Access CTA Section -->
    <section class="px-6 py-20 md:py-28">
      <div class="max-w-4xl mx-auto text-center">
        <div class="relative">
          <!-- Decorative elements -->
          <div class="absolute -top-12 left-1/2 -translate-x-1/2 w-px h-12 bg-gradient-to-b from-transparent to-gold/50"></div>

          <span class="inline-flex items-center gap-2 px-4 py-2 bg-gold/10 border border-gold/30 rounded-full text-gold text-sm font-medium mb-8 animate-fade-up">
            <span class="w-2 h-2 bg-gold rounded-full animate-pulse-glow"></span>
            Limited Early Access
          </span>

          <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-cream mb-6 animate-fade-up delay-100">
            Be one of the first agents
            <span class="text-gradient-gold block mt-2">to try Kazend</span>
          </h2>

          <p class="text-lg text-muted mb-10 max-w-2xl mx-auto animate-fade-up delay-200">
            We're launching with a small group of Utah agents. Join the waitlist to get early access
            and help shape the product.
          </p>

          <div class="flex justify-center animate-fade-up delay-300">
            <EmailSignup variant="compact" />
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
